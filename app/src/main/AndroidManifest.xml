<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.bridgelabz.fundoonotes">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".user_module.login.view.ForgotPasswordActivity"
            android:parentActivityName=".user_module.login.view.LoginActivity" />
        <activity
            android:name=".note_module.dashboard_page.view.HomeDashBoardActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.app.searchable"
                android:resource="@xml/searchable" />
        </activity>

        <activity
            android:name=".user_module.launch_module.LaunchScreenActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".user_module.registration.view.RegisterActivity"
            android:parentActivityName=".user_module.login.view.LoginActivity" />
        <activity android:name=".user_module.login.view.LoginActivity" />

        <receiver android:name=".notification_util.AlertReceiver" />
    </application>

</manifest>